<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/frag_home"
    tools:context="it.polito.bikingtour.MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
        
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" 
            android:text="@string/add_route"
            style="@style/btnStyleArsenic"
            android:onClick="addRoute" />

<!--        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_routes"
            android:gravity="center_horizontal"
            android:background="#AAAAAAAA" />
        
        <ListView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    
    -->
    
    	<TabHost 
    	    android:id="@+id/tabhost"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1" >
        	
    	    <LinearLayout
          		android:id="@+id/tabContentLinear"
                android:layout_width="match_parent"
               	android:layout_height="match_parent"
                android:orientation="vertical" >
                
    	   		<TabWidget
                	android:id="@android:id/tabs"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:visibility="visible" >
            	</TabWidget>     
    	        
    	   		<FrameLayout
                	android:id="@android:id/tabcontent"
                	android:layout_width="match_parent"
                	android:layout_height="match_parent"
                	android:padding="5dp" >
    	   		
    	   		    <ListView
    	   		        android:id="@+id/myRoutesListView" 
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"/>
    	   		    
    	   		     <ListView 
    	   		        android:id="@+id/oldRoutesListView"
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"/>
    	   		 
    	   		</FrameLayout>
    	    </LinearLayout>
   		</TabHost>    
</LinearLayout>
