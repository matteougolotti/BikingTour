<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <VideoRecorderView
        android:id="@+id/video_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        
        <ImageButton 
            android:id="@+id/record_video_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:contentDescription="@string/record_video_button"/>
        
        <ImageButton 
            android:id="@+id/close_fragment_picture"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:contentDescription="@string/close_fragment_video_button"/>
        
    </LinearLayout>

</LinearLayout>
